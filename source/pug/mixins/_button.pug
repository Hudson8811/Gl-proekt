mixin button(text, className, href, svgName)
	if href
		a.button(href=href, class=className, target='_blank')
			if svgName
				svg
					use(xlink:href=`./svg/sprite.svg#${svgName}`)
			span= text
	else
		button.button(class=className)&attributes(attributes)
			if svgName
				svg
					use(xlink:href=`./svg/sprite.svg#${svgName}`)
			span= text

extends templates/main
block variables
	- let pageTitle = TITLE_PART + ' | Услуги';
	- let isHome = false; //- Если true то логотип не будет ссылкой
	- let currentPage = 3.01; // Для каждой страницы уникален. Номер смотреть в файле pug/templates/_vars.pug в массивах с пунктами меню
	- let currentSection = 3; // // Для каждой раздела уникален. Home -1, projects - 2, news - 3, pages - 4

block header
	include modules/header

block content
	article.services-page
		.container
			h1.visually-hidden Услуги
			ul.services-list
				- let count = 1;
				each item, index in SERVICES_LIST
					if count > 4
						- count = 1;
					- let modifierClass = count > 2 ? ' service-card--reverse' : '';
					+service-card(item, 'services-list__item' + modifierClass, 'li')(data-count= item.count)
					- count++;
	//- include modules/services
block footer
	include modules/footer


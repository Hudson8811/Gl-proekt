extends templates/main
block variables
	- let pageTitle = TITLE_PART + ' | Услуги подгруппа';
	- let isHome = false; //- Если true то логотип не будет ссылкой
	- let currentPage = 3.02; // Для каждой страницы уникален. Номер смотреть в файле pug/templates/_vars.pug в массивах с пунктами меню
	- let currentSection = 3; // // Для каждой раздела уникален. Home -1, projects - 2, news - 3, pages - 4

block header
	include modules/header

block content
	article.services-page
		.services-page__inner.container
			header.services-page__header
				.services-page__header-image
					img(src="img/services-page/building-large.png", srcset="img/services-page/building-large@2x.png 2x", width="422", height="570", alt="")
				h1.services-page__heading.heading.heading--large.__js_negative-shift Фасадное остекление
			ul.services-page__list.services-list
				- let count = 1;
				each item, index in SERVICES_LIST_GROUP
					if count > 4
						- count = 1;
					- let modifierClass = count > 2 ? ' service-card--reverse' : '';
					+service-card(item, 'services-list__item' + modifierClass, 'li')
					- count++;

			include modules/lines
	include modules/services
block footer
	include modules/footer


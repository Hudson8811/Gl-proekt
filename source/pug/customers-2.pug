			include modules/lines
			h1.customers__title.page-title Клиенты

			.customers__aside.customers__aside--filter
				select.customers__select(name="")
					each item, index in CUSTOMERS
						if index === 0

							option(value="all", selected)= item
						else
							option(value="customers-" + index)= item
				ul.customers__menu#customersMenu
					each item, index in CUSTOMERS
						- let addClass = index === 1 ? 'customers__item--active' : '';
						if index === 0
						else
							li.customers__item(class= addClass)
								a(href="#customers-" + index)= item

